@model List<AcunMedyaPortolfyoProject.Models.Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yetenekler Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Yetenek ID</th>
                <th>Yetenek</th>
                <th>Derece</th>
                <th>Açıklama</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SkillID</td>
                    <td>@item.SkillName</td>
                    <td>@item.Derece</td>
                    <td>@item.Description</td>
                    <td><a href="/Skill/UpdateSkill/@item.SkillID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Skill/DeleteSkill/@item.SkillID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Skill/CreateSkill/" class="btn btn-dark">Oluştur</a>
</div>