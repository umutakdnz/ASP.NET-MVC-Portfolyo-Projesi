@model List<AcunMedyaPortolfyoProject.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Projeler Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Proje ID</th>
                <th>Proje Adı</th>
                <th>Proje Açıklaması</th>
                <th>Proje Linki</th>
                <th>Görsel-1</th>
                <th>Görsel-2</th>
                <th>Görsel-3</th>
                <th>Kategori</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ProjectID</td>
                    <td>@item.ProjectName</td>
                    <td>@item.Description</td>
                    <td>@item.ProjectLink</td>
                    <td><img src="@item.Image1" style="width:50px" /></td>
                    <td><img src="@item.Image2" style="width:50px" /></td>
                    <td><img src="@item.Image3" style="width:50px" /></td>
                    <td>@item.Category.CategoryName</td>
                    <td><a href="/Project/UpdateProject/@item.ProjectID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Project/DeleteProject/@item.ProjectID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Project/CreateProject/" class="btn btn-dark">Oluştur</a>
</div>
