@model AcunMedyaPortolfyoProject.Models.Communication
@{
    ViewBag.Title = "UpdateCommunication";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Mesaj Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.MessageID)
    <label>Ad - Soyad</label>
    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" }) <br />
    <label>Mail</label>
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" }) <br />
    <label>Mesaj</label>
    @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control" }) <br />
    <button class="btn btn-success">Güncelle</button>
</form>