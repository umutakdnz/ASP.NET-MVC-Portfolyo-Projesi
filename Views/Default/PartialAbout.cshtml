@model List<AcunMedyaPortolfyoProject.Models.About>

<section id="about" class="about section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>Hakkımda</h2>
    </div><!-- End Section Title -->

    @foreach (var item in Model)
    {
        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4 justify-content-center">
                <div class="col-lg-4">
                    <img src="@item.ImageURL" class="img-fluid" alt="">
                </div>
                <div class="col-lg-8 content">
                    <h2>@item.Title</h2>
                    <p class="fst-italic py-3">
                        @item.Description1
                    </p>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Doğum Tarihi:</strong> <span>@(item.Birthday != null ? ((DateTime)item.Birthday).ToString("dd.MM.yyyy") : "")</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Web Site:</strong> <span>@item.Website</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Telefon:</strong> <span>@item.Phone</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Adres:</strong> <span>@item.City</span></li>
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul>
                                <li><i class="bi bi-chevron-right"></i> <strong>Yaş:</strong> <span>@item.Age</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Derece:</strong> <span>@item.Degree</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Email:</strong> <span>@item.Email</span></li>
                                <li><i class="bi bi-chevron-right"></i> <strong>Freelance:</strong> <span>@item.FreeLance</span></li>
                            </ul>
                        </div>
                    </div>
                    <p class="py-3">
                        @item.Description2
                    </p>
                </div>
            </div>

        </div>
    }



</section>