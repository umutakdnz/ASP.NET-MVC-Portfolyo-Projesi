@model AcunMedyaPortolfyoProject.Models.Contact
@{
    ViewBag.Title = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>İletişim Bilgisi Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ContactID)
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" }) <br />
    <label>Adres</label>
    @Html.TextBoxFor(x => x.Adress, new { @class = "form-control" }) <br />
    <label>Email</label> 
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" }) <br />
    <label>Telefon No</label>
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" }) <br />
    <button class="btn btn-success">Güncelle</button>
</form>

