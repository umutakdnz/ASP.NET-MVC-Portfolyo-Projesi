@model List<AcunMedyaPortolfyoProject.Models.Slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Profil Sayfası</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Slider ID</th>
                <th>Ad - Soyad</th>
                <th>Ünvan</th>
                <th>Görsel</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SliderID</td>
                    <td>@item.NameSurname</td>
                    <td>@item.Description</td>
                    <td><img src="@item.ImageUrl" style="width:50px" /></td>
                    <td><a href="/Slider/UpdateSlider/@item.SliderID" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Slider/DeleteSlider/@item.SliderID" class="btn btn-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Slider/CreateSlider/" class="btn btn-dark">Oluştur</a>
</div>